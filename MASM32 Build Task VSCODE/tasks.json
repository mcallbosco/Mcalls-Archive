{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MASM",
            "type": "shell",
            "command": "cd '${fileDirname}'; del '${fileBasenameNoExtension}-old.exe' ; Rename-Item '${fileBasenameNoExtension}.exe' '${fileBasenameNoExtension}-old.exe'; ml -nologo -c -coff -Zi '${file}' ; link /NOLOGO /SUBSYSTEM:CONSOLE /ENTRY:main /LIBPATH:'C:/Irvine' irvine32.lib kernel32.lib user32.lib '${fileBasenameNoExtension}.obj'; ./${fileBasenameNoExtension}.exe",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
        {
            "label": "MASM LINUX",
            "type": "shell",
            "command": "source ~/.bash_profile   && cd '${fileDirname}' && masm '${file}' && mv '${fileBasenameNoExtension}.exe' '${fileBasenameNoExtension}-ran.exe'",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
